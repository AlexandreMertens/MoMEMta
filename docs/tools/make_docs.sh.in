#! /bin/bash

# vim: syntax=sh

if [[ $TRAVIS_PULL_REQUEST != 'false' ]]; then
    exit 0;
fi

if [[ $TRAVIS_BRANCH != 'prototype' ]]; then
    exit 0;
fi

# If there's no private key, exit
if [ ! -f ~/.ssh/id_rsa ]; then
    exit 0;
fi

echo "Generating documentation"

REPO_PATH=git@github.com:MoMEMta/MoMEMta.git
GH_PAGES_PATH=@CMAKE_BINARY_DIR@/gh_pages
DOC_OUTPUT_PATH=@CMAKE_BINARY_DIR@/documentation/html
COMMIT_USER="Documentation Builder"
COMMIT_EMAIL="momemta@cp3.be"
CHANGESET=$(git rev-parse --verify HEAD)

rm -rf "${GH_PAGES_PATH}"
mkdir -p "${GH_PAGES_PATH}"
git clone -b gh-pages "${REPO_PATH}" --single-branch "${GH_PAGES_PATH}"

# Remove all the content of the dev documentation
cd "${GH_PAGES_PATH}"
git rm -rf dev/*
ls
cd -

# Make documentation
make docs

cd "${GH_PAGES_PATH}"

mv ${DOC_OUTPUT_PATH} dev

git status

echo "git add dev"
git add dev
git status

echo "git add dev/*"
git add dev/*
git status

echo "git add -A ."
git add -A .
git status

echo "git add *"
git add *
git status

cd dev

echo "[dev] git add -A ."
git add -A .
git status

echo "[dev] git add *"
git add *
git status

cd ..

git config user.name "${COMMIT_USER}"
git config user.email "${COMMIT_EMAIL}"
git commit -m "Automated documentation build for changeset ${CHANGESET}."
git push origin gh-pages
cd -
